<!DOCTYPE html>
<html>
<head>
  <title>Login - Bank Nkhonde</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application" %>
  <%= stylesheet_link_tag "login" %> <!-- Include the login.css -->
  <%= javascript_include_tag "application" %>
  <%= javascript_importmap_tags %>
</head>

<body>
  <div class="login-container">
    <div class="login-card">
      <h2>Sign In</h2>

      <%= form_with url: "/auth/login", method: :post, local: true do |f| %>
        <div>
          <label>Username:</label>
          <%= text_field_tag "authentication[username]" %>
        </div>

        <div>
          <label>Password:</label>
          <%= password_field_tag "authentication[password]" %>
        </div>

        <div>
          <%= submit_tag "Login" %>
        </div>
        <div class="forgot-password">
          <a href="#">Forgot password?</a>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <p style="color: red;"><%= flash[:alert] %></p>
      <% end %>
    </div>
  </div>
</body>
</html>